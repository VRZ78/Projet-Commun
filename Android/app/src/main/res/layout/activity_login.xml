<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".LoginActivity"
    android:id="@+id/relativeLayout"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="30dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".LoginActivity"
            android:id="@+id/relativeLayout2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entrez vos identifiants de connexion :"
        android:id="@+id/titleText"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userNameET"
        android:hint="Nom d&apos;Utilisateur"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordET"
        android:hint="Mot de Passe"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/userNameET"
        android:layout_alignStart="@+id/userNameET"
        android:layout_alignEnd="@+id/userNameET" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        android:id="@+id/connectButton"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/passwordET"
        android:layout_centerHorizontal="true"
        android:background="#ff6b35"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Créer un compte"
        android:id="@+id/createAccountButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/connectButton"
        android:background="#ff6b35"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mot de passe oublié"
        android:id="@+id/forgotPasswordbutton"
        android:layout_below="@+id/createAccountButton"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="#ff6b35"
        android:textColor="#ffffff" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
